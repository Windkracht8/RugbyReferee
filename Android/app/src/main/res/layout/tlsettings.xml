<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <TextView
        android:id="@+id/tvSettingsHead"
        android:text="@string/settings"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold" />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*" >
        <TableRow>
            <TextView
                android:text="@string/home_name"
                android:labelFor="@+id/etHomeName" />

            <EditText
                android:id="@+id/etHomeName"
                android:importantForAutofill="no"
                android:inputType="text"
                android:textAlignment="center" />
        </TableRow>
        <TableRow>
            <TextView
                android:text="@string/away_name"
                android:labelFor="@+id/etAwayName" />
            <EditText
                android:id="@+id/etAwayName"
                android:inputType="text"
                android:textAlignment="center"
                android:importantForAutofill="no" />
        </TableRow>
        <TableRow>
            <TextView
                android:text="@string/home_color" />
            <Spinner
                android:id="@+id/sHomeColor" />
        </TableRow>
        <TableRow>
            <TextView
                android:text="@string/away_color" />
            <Spinner
                android:id="@+id/sAwayColor" />
        </TableRow>
        <TableRow>
            <TextView
                android:text="@string/time_split"
                android:labelFor="@+id/etTimeSplit" />
            <EditText
                android:id="@+id/etTimeSplit"
                android:inputType="number"
                android:textAlignment="center"
                android:importantForAutofill="no" />
        </TableRow>
        <TableRow>
            <TextView
                android:text="@string/split_count"
                android:labelFor="@+id/etSplitCount" />
            <EditText
                android:id="@+id/etSplitCount"
                android:inputType="number"
                android:textAlignment="center"
                android:importantForAutofill="no" />
        </TableRow>
        <TableRow>
            <TextView
                android:text="@string/sinbin"
                android:labelFor="@+id/etSinbin" />
            <EditText
                android:id="@+id/etSinbin"
                android:inputType="number"
                android:textAlignment="center"
                android:importantForAutofill="no" />
        </TableRow>
        <TableRow>
            <TextView
                android:text="@string/points_for_try"
                android:labelFor="@+id/etPointsTry" />
            <EditText
                android:id="@+id/etPointsTry"
                android:inputType="number"
                android:textAlignment="center"
                android:importantForAutofill="no" />
        </TableRow>
        <TableRow>
            <TextView
                android:text="@string/points_for_conversion"
                android:labelFor="@+id/etPointsCon" />
            <EditText
                android:id="@+id/etPointsCon"
                android:inputType="number"
                android:textAlignment="center"
                android:importantForAutofill="no" />
        </TableRow>
        <TableRow>
            <TextView
                android:text="@string/points_for_goal"
                android:labelFor="@+id/etPointsGoal" />
            <EditText
                android:id="@+id/etPointsGoal"
                android:inputType="number"
                android:textAlignment="center"
                android:importantForAutofill="no" />
        </TableRow>
    </TableLayout>
    <Button
        android:id="@+id/bSetSettings"
        android:onClick="bSetSettingsClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/bSetSettings_text"
        android:textAllCaps="false" />
</LinearLayout>